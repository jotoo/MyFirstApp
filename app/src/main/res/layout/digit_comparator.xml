<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">

    <EditText
        android:id="@+id/first_digit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Digit" />

    <EditText
        android:id="@+id/second_digit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Second Digit" />

    <Button
        android:id="@+id/compare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Compare"
        android:textSize="20sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        tools:text="Ecuals" />

    <Switch
        android:id="@+id/switchtest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Switch"
        android:textOff="off"
        android:textOn="on"
        android:textSize="16sp"
        android:textStyle="italic" />

    <CheckBox
        android:id="@+id/checkboxtest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_name"
        android:textSize="12sp"
        android:textStyle="italic" />

    <ToggleButton
        android:id="@+id/togglebuttontest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right" />


</LinearLayout>